<%= form_with model: @task, class: "form" do |f| %>
<h3> Make changes to the task: </h3>
<%= f.label :name, "Task Name:" %>
<%= f.text_field :name %>
<%= f.label :description, "Description:" %>
<%= f.text_field :description %>
<%= f.label :completion_time, "Completed By:" %>
<%= f.text_field :completion_time %>
<%= f.submit "Update Task", class: "button"%>

<% end %>
